<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_registrarse">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="false"
        android:id="@+id/scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_carne"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_round"
                android:inputType="number"
                android:maxLength="6"
                android:hint="Carné" />

            <EditText
                android:id="@+id/txt_nombre"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:digits="a b c d e f g h i j k l m n ñ o p q r s t u v w x y z A B C D E F G H I J K L M N Ñ O P Q R S T U V W X Y Z é á í ó ú Á É Í Ó Ú "
                android:background="@drawable/edit_round"
                android:hint="Nombre" />

            <EditText
                android:id="@+id/txt_apellido"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:digits="a b c d e f g h i j k l m n ñ o p q r s t u v w x y z A B C D E F G H I J K L M N Ñ O P Q R S T U V W X Y Z é á í ó ú Á É Í Ó Ú"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_round"
                android:hint="Apellido" />


            <EditText
                android:id="@+id/txt_correo"
                android:layout_width="298dp"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_round"
                android:hint="Correo Estudiantil"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_email"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_round"
                android:inputType="textPassword"
                android:drawableRight="@android:drawable/ic_menu_view"
                android:paddingRight="10dp"
                android:hint="Contraseña" />

            <EditText
                android:id="@+id/txt_repPassword"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_email"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:drawableRight="@android:drawable/ic_menu_view"
                android:paddingRight="10dp"
                android:background="@drawable/edit_round"
                android:hint="Repetir Contraseña" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="300dp"
                android:layout_height="38dp"
                android:layout_below="@+id/txt_password"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_round"
                android:gravity="center"
                android:text="Registrarse"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/SOYMARGENABAJO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
